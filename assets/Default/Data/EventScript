//No41.クロウボール
if (KuniFlag[4]!=0 && Turn>50 && Random(13)==0)
{
	Set a,BaseArea[4]
	if (AreaButaiKz[a]<20)
	{
      		AreaFocus a
		if (HeroKuni[%パルスザン]==4 && Flag[57]==false && KuniPlayer[4])
		{
			Window 1
			FaceOut 4
			WindowOn 100
			Window 0
			Conversation %パルスザン
			Print ルーゼル様
			Print 魔界から面白いものが届きましたよ。
			WindowOn 4000
			Window 1
			Conversation 4
			Print 面白いもの？
			Print なんだそれは。
			WindowOn 4000
			Window 0
			Conversation %パルスザン
			Print クロウボールです！
			WindowOn 4000
			Window 1
			Conversation 4
			Print クロウボール！？
			Print あの殺人兵器か！！
			WindowOn 4000
			Window 0
			Conversation %パルスザン
			Print そうです。
			Print これで人間どもも一掃できましょう。
			WindowOn 4000
			Window 1
			Conversation 4
			Print ははは。
			Print これで、戦いも楽になるな。
			WindowOn 4000
			Clear
			Set Flag[57],true
			WindowOff
		}
		Window 1
		FaceOut 4
		WindowOn 100
		Window 0
		Size 356,96
		Print クロウボールが魔界から
		Print ルーゼルの元に運ばれた！
		WindowOn 4000
		WindowOff
		CharSet a,%クロウボール
	}
} 
//No42.海賊神官ナシュカ
