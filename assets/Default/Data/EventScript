//つぎはFlag50から
//No34.女魔法戦士カリン
if (Flag[50]==false && Turn>40 && Scenario<=2 && AreaButaiKz[3]<20)
{
	Set a,AreaKuni[3]
	if (a>0 && a!=4 && a!=14 && a!=7 && a!=10)
	{
		Set b,true
		if (KuniPlayer[a])
		{
	      		AreaFocus 3
			Window 1
			FaceOut a
			WindowOn 100
			Window 0
			Size 356,96
			Print 東アルナス砂漠に、
			Print 強力な魔法戦士がいるそうです。
			WindowOn 4000
			Set b,YesNo(訪ねてみますか？)
			if (b)
			{
				Window 0
				Conversation %カリン
				Print はじめまして、
				Print 私はカリンといいます。
				WindowOn 4000
				Clear
				Conversation %カリン
				Print 何か、用があるのですか？
				WindowOn 4000
				Set b,YesNo(仲間になるように誘ってみますか？)
				if (b)
				{
					Clear
					Conversation %カリン
					Print はぁ、そうですか・・・。
					WindowOn 4000
					Clear
					Print まぁ、いいですわ。
					Print （ここにいても暇だし）
					WindowOn 4000
					Window 0
					Size 356,96
					Print カリンが仲間になった。
					WindowOn 4000
				}
			}
			WindowOff
		}
		if (b)
		{
			CharSet	3,%カリン
		}
		Set Flag[50],true
	}
} 
//No35.リザードナイト・モーゼン
if (Flag[51]==false && Scenario==1 && AreaButaiKz[43]<20)
{
	Set a,AreaKuni[43]
	if (a==6)
	{
		Set b,true
		if (KuniPlayer[a])
		{
	      		AreaFocus 43
			Window 1
			FaceOut a
			WindowOn 100
			Window 0
			Size 356,96
			Print コリカ沼に、
			Print 強力な戦士がいるそうです。
			WindowOn 4000
			Set b,YesNo(訪ねてみますか？)
			if (b)
			{
				Window 0
				Conversation %モーゼン
				Print あのエルフ野郎…
				Print あのエルフ野郎…
				WindowOn 4000
				Clear
				Print ぶっ殺してやる…！！
				WindowOn 4000
				Window 1
				Conversation a
				Print ・・・・・・。
				Print （なんなんだ、こいつは。）
				WindowOn 4000
				Clear
				Print （しかし、役に立つかもな…。）
				WindowOn 4000
				Set b,YesNo(仲間になるように誘ってみますか？)
				if (b)
				{
					Window 0
					Conversation %モーゼン
					Print 殺す。殺す。殺す。殺す。
					Print 殺す。殺す。殺す。殺す。
					WindowOn 4000
					Window 1
					Conversation 6
					Print ・・・・・・。
					Print （意味がわからん…。）
					WindowOn 4000
					Window 0
					Size 356,96
					Print モーゼンが仲間になった。
					WindowOn 4000
				}
			}
			WindowOff
		}
		if (b)
		{
			CharSet	43,%モーゼン
		}
		Set Flag[51],true
	}
} 
//No36.野菜師メーヤ
if (Flag[52]==false && Scenario<=2 && AreaButaiKz[55]<20)
{
	Set a,AreaKuni[55]
	if (a>0 && a!=5 && a!=7 && a!=14)
	{
		Set b,true
		if (KuniPlayer[a])
		{
	      		AreaFocus 55
			Window 1
			FaceOut a
			WindowOn 100
			Window 0
			Conversation %メーヤ
			Print あらあら、あなたが
			Print あの・・・
			WindowOn 4000
			Clear
			Print 誰でしたっけ？
			WindowOn 4000
			Set b,YesNo(名前を言う)
			if (b==false)
			{
				Window 0
				Conversation %メーヤ
				Print だれよ、あんた？
				WindowOn 4000
				Clear
				Print あんたに用なんかないわ。
				WindowOn 4000
			}
			if (b)
			{
				Window 0
				Conversation %メーヤ
				Print あ、そうそう。
				Print 思い出したわ。
				WindowOn 4000
				Clear
				Print 戦争ごっこやっている人でしょ。
				WindowOn 4000
				Set c,YesNo(ちがう！！)
				if (c)
				{
					Window 0
					Conversation %メーヤ
					Print あっ、そうなの？
					WindowOn 4000
					Clear
					Print じゃ、人違いだわ。
					Print さよならぁぁぁ・・・。
					WindowOn 4000
					Set b,false
				}
				if (c==false)
				{
					Window 0
					Conversation %メーヤ
					Print あ、やっぱりね。
					WindowOn 4000
					Clear
					Print あたしさぁ、お金に困っているだけど…
					WindowOn 4000
					Clear
					Print 働くからさぁ、
					Print 雇ってくれない？
					WindowOn 4000
					Set b,YesNo(雇う)
					if (b)
					{
						Clear
						Print あんがと・・・。
						Print ちゃんと働くよ。
						WindowOn 4000
						Window 0
						Size 356,96
						Print メーヤが仲間になった。
						WindowOn 4000
					}
					if (b==false)
					{
						Clear
						Print なんだ。
						Print けちね。
						WindowOn 4000
					}
				}
			}
			WindowOff
		}
		if (b)
		{
			CharSet	55,%メーヤ
		}
		Set Flag[52],true
	}
} 
//No37.竜騎士オーティ
