//No39.緑のドリュアス・キオー
if (Flag[55]==false && Scenario==1 && AreaButaiKz[44]<20 && AreaKuni[44]>0)
{
	Set a,AreaKuni[44]
	if (Flag[56]==false)
	{
		Set b,true
		if (KuniPlayer[a])
		{
	      		AreaFocus 44
			Window 1
			FaceOut a
			WindowOn 100
			Window 0
			Conversation %キオー
			Print えっと、私、ドリュアスのキオーといいます。
			WindowOn 4000
			Clear
			Print 妹のキニーとはぐれてしまって･・・・
			WindowOn 4000
			Clear
			Print 一緒に探してくれませんか？
			Print この森にいると思うのですが・・・
			Set b,YesNo(一緒に探そう)
			if (b)
			{
				Clear
				Print ありがとうございます
				WindowOn 4000
				Window 0
				Size 356,96
				Print キオーが仲間になった。
			}
			if (b==false)
			{
				Clear
				Print そうですか。それは残念です。
			}
			WindowOn 4000
			WindowOff
		}
		if (b)
		{
			CharSet 44,%キオー
		}
		Set Flag[55],true
	}
	if (Flag[56]==true)
	{
		if (HeroFlag[%キニー]==44)
		{
			if (KuniPlayer[a])
			{
				Window 1
				FaceOut a
				WindowOn 100
				Window 0
				Conversation %キニー
				Print あっ、姉さん！！
				WindowOn 4000
				Window 1
				Conversation %キオー
				Print あ、キニー！
				Print やっと会えたわ。
				WindowOn 4000
				Window 0
				Conversation %キニー
				Print だいぶ、探したわ。
				Print もう、どこにいっているのよ。
				WindowOn 4000
				Window 1
				Conversation %キオー
				Print ごめん、ちょっと、散歩を
				Print してただけなんだけど。
				WindowOn 4000
				Clear
				Print 道に迷ってしまって・・・
				Window 0
				FaceOut a
				Window 1
				Conversation %キオー
				Print この方ね、探してくれた方は。
				WindowOn 4000
				Clear
				Print 微力ながらお手伝いしますわ。
				WindowOn 4000
				Window 0
				Size 356,96
				Print キオーが仲間になった。
				WindowOn 4000
				WindowOff
			}
			CharSet 44,%キオー
			Set Flag[55],true
		}
	}
} 
